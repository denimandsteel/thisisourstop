<div id="comment-<%= comment.cid %>" class="comment<% if (typeof new_comment !== 'undefined' && new_comment === true) { %> new<% } %>">
  <div class="time"><%=: comment.time | time %></div>
  <!--<div class="score"><%=: comment.score %></div>-->
  <% if (typeof comment.type !== 'undefined') { %>
    <% for(var i = 0; i < comment.type.length; i++) { %>
      <img width="32" height="32" class="icon" id="<%= comment.type[i] %>" src="/<%= comment.type[i] %>.png" />
    <% } %>
  <% } %>
  <div class="text"><%= comment.comment %></div>
  <div class="actions"><a href="/stop/<%= comment.stop %>/comment/<%= comment.cid %>/moderate/up?token=">+</a> / <a href="/stop/<%= comment.stop %>/comment/<%= comment.cid %>/moderate/down?token=">-</a> | <a href="/stop/<%= comment.stop %>/comment/<%= comment.cid %>/moderate/report?token=">report</a></div>
</div>
