<div id="comment-<%= comment.cid %>" class="comment<% if (typeof new_comment !== 'undefined' && new_comment === true) { %> new<% } %>">
  <!--<div class="score"><%=: comment.score %></div>-->
  <% if (typeof comment.type !== 'undefined') { %>
    <% for(var i = 0; i < comment.type.length; i++) { %>
      <div class="icon <%= comment.type[i] %>"></div>
    <% } %>
  <% } %>
  <div class="text"><%= comment.comment %></div>
  <div class="meta">
    <% if (comment.nickname != null) { %>
    <div class="nickname"><%= comment.nickname %></div>
    <% } %>
    <div class="time" data-time="<%= comment.time %>"><%=: comment.time | time %></div>
  </div>
  <div class="actions"><a href="/stop/<%= comment.stop.stop_code %>/comment/<%= comment.cid %>/flag/up?token=" class="up">+</a> <span class="score"><%= comment.score %></span> <a href="/stop/<%= comment.stop.stop_code %>/comment/<%= comment.cid %>/flag/down?token=" class="down">-</a> <a class="report" href="/stop/<%= comment.stop.stop_code %>/comment/<%= comment.cid %>/flag/report?token=">report</a></div>
</div>
