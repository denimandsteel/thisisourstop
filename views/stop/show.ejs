<form method="post" action="/">
	<input name="stop" id="stop" type="text" pattern="[0-9]*" value="<%= stop.id %>" />
	<input type="submit" value="Go" />
</form>

<ul class="tabs">
  <li>Busses</li>
  <li>Recent Talk</li>
</ul>

<h2>At This Stop</h2>

<div id="stop-info">
  <%- partial('trip', stop.trip) %>

  <p>
    <a href="http://maps.google.com/maps?ll=<%= stop.stop.stop_lat %>,<%= stop.stop.stop_lon %>">
      <img src="http://maps.googleapis.com/maps/api/staticmap?center=<%= stop.stop.stop_lat %>,<%= stop.stop.stop_lon %>&amp;zoom=15&amp;size=290x200&amp;maptype=&amp;markers=<%= stop.stop.stop_lat %>,<%= stop.stop.stop_lon %>&amp;sensor=false" />
    </a>
  </p>

  <a href="http://maps.google.com/maps?ll=<%= stop.stop.stop_lat %>,<%= stop.stop.stop_lon %>">Open in Maps</a>
  <a href="http://nb.translink.ca/Map/Stop/<%= stop.id %>">Open in TransLink Mobile</a>
</div>

<div id="stop-talk">
  <a href="/stop/<%= stop.id %>/new">Post Something</a>

  <%- partial('comment', comments) %>

  <a href="/stop/<%= stop.id %>/new">Post Something</a>
</div>